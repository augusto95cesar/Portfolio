@model pontoid.myclinica.Models.convenio

@{
    ViewBag.Title = "Create";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Nome do Convenio</label> 
            <div class="col-md-10">
                @Html.EditorFor(model => model.NomeConvenio, new { htmlAttributes = new { @class = "form-control", @type="text" } })
                @Html.ValidationMessageFor(model => model.NomeConvenio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Salvar" class="btn btn-outline-primary" id="larguraTotal" />
            </div>
            <div class="col-md-offset-2 col-md-6">
                @Html.ActionLink("Voltar", "Create", "agendamentoConsultas", null, new { @class = "btn btn-outline-danger", @type = "button", @id = "larguraTotal" })
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
